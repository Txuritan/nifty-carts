{
	"schemaVersion": 1,
	"id": "niftycarts",
	"version": "${version}",
	"name": "NiftyCarts",
	"description": "A Fabric mod port for Minecraft: Java Edition which adds carts for travel, shipping and farming.",
	"authors": [
		"MennoMax",
		"paul101",
		"jmb19905"
	],
	"contact": {
		"sources": "https://github.com/jmb05/nifty-carts"
	},
	"license": "MIT",
	"icon": "assets/niftycarts/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.jmb19905.niftycarts.NiftyCarts"
		],
		"client": [
			"net.jmb19905.niftycarts.client.NiftyCartsClient"
		]
	},
	"mixins": [
		"niftycarts.mixins.json",
		{
			"config": "niftycarts.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.15.6",
		"minecraft": "~1.19.2",
		"java": ">=17",
		"fabric-api": "*",
		"forgeconfigapiport": "4.2.11"
	},
	"suggests": {
		"forgeconfigscreens": "*"
	},
	"accessWidener": "niftycarts.accesswidener"
}